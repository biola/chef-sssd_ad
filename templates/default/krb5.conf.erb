[libdefaults]
  default_realm = <%= node['samba']['options']['realm'].upcase %>
  ticket_lifetime = 24h
  renew_lifetime = 7d

[realms]
  <%= node['samba']['options']['realm'].upcase %> = {
    kdc = <%= node['sssd_ad']['dc'] %>
    admin_server = <%= node['sssd_ad']['dc'] %>
  }

[domain_realm]
  .<%= node['samba']['options']['realm'].downcase %> = <%= node['samba']['options']['realm'].upcase %>
  <%= node['samba']['options']['realm'].downcase %> = <%= node['samba']['options']['realm'].upcase %>

[logging]
  Default = FILE:/var/log/krb5.log
